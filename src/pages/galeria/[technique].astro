import { getCollection } from 'astro:content';
export const prerender = true;
export async function getStaticPaths() {
  // Generar redirects para todas las técnicas conocidas (compatibilidad con URLs antiguas)
  const techniques = [
    'Pintura',
    'Collage',
    'Audiovisual',
    'Mosaico',
    'Volumen',
    'Máscaras',
    'Lámparas',
    'Diseño',
    'Dibujo',
  ];
  return techniques.map((t) => ({ params: { technique: t } }));
}
const { technique } = Astro.params;
return Astro.redirect(`/galeria/tecnica/${encodeURIComponent(String(technique ?? ''))}`, 301);
