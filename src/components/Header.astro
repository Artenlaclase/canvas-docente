  <script>
    // Menú móvil con animación de altura/opacidad e icono toggle
    document.addEventListener('DOMContentLoaded', () => {
      const btn = document.getElementById('mobile-menu-button') as HTMLButtonElement | null;
      const menu = document.getElementById('mobile-menu') as HTMLDivElement | null;
      const iconMenu = document.getElementById('icon-menu') as SVGElement | null;
      const iconClose = document.getElementById('icon-close') as SVGElement | null;
      if (!btn || !menu) return;

      const openMenu = () => {
        menu.style.maxHeight = menu.scrollHeight + 'px';
        menu.style.opacity = '1';
        menu.style.pointerEvents = 'auto';
        menu.setAttribute('aria-hidden', 'false');
        menu.setAttribute('data-open', 'true');
        btn.setAttribute('aria-expanded', 'true');
        btn.setAttribute('aria-label', 'Cerrar menú');
        if (iconMenu && iconClose) { iconMenu.classList.add('hidden'); iconClose.classList.remove('hidden'); }
      };
      const closeMenu = () => {
        menu.style.maxHeight = '0px';
        menu.style.opacity = '0';
        menu.style.pointerEvents = 'none';
        menu.setAttribute('aria-hidden', 'true');
        menu.setAttribute('data-open', 'false');
        btn.setAttribute('aria-expanded', 'false');
        btn.setAttribute('aria-label', 'Abrir menú');
        if (iconMenu && iconClose) { iconMenu.classList.remove('hidden'); iconClose.classList.add('hidden'); }
      };
      const isOpen = () => menu.getAttribute('data-open') === 'true';

      btn.addEventListener('click', () => {
        isOpen() ? closeMenu() : openMenu();
      });

      // Cerrar al seleccionar un enlace
      menu.querySelectorAll('a').forEach((el: Element) => {
        (el as HTMLElement).addEventListener('click', () => closeMenu());
      });

      // Cerrar con Escape
      window.addEventListener('keydown', (e: KeyboardEvent) => {
        if (e.key === 'Escape' && isOpen()) closeMenu();
      });
    });
  </script>
