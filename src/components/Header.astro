---
const nav = [
  { href: '/', label: 'Inicio' },
  { href: '/galeria', label: 'Galería' },
  { href: '/blog', label: 'Blog' },
  { href: '/sobre-mi', label: 'Sobre mí' },
  { href: '/contacto', label: 'Contacto' },
];
---
<header class="bg-white/80 backdrop-blur sticky top-0 z-40 border-b border-slate-200">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 font-semibold">
      <img src="/logo1.png" alt="Logo" class="h-8 w-auto" />
      <span>Canvas Docente</span>
    </a>
    <nav class="flex items-center gap-6 text-sm">
      {nav.map((item) => (
        <a href={item.href} class="hover:text-sky-700 text-slate-700" >{item.label}</a>
      ))}
    </nav>
  </div>
</header>
