---
// Simple client-action form that posts to /api/contact
---
<section class="py-12 sm:py-16 border-t border-slate-200 mt-8 scroll-mt-24 sm:scroll-mt-28">
  <div class="mx-auto max-w-3xl">
    <h2 class="text-2xl font-semibold tracking-tight">Envíame un mensaje</h2>
    <p class="mt-2 text-slate-600">¿Tienes una propuesta, consulta o quieres colaborar? Completa el formulario y te responderé.</p>

    <form id="contact-form" class="mt-6 grid gap-4" novalidate>
      <div class="grid sm:grid-cols-2 gap-4">
        <div>
          <label for="name" class="block text-sm font-medium text-slate-700">Nombre</label>
          <input id="name" name="name" type="text" required class="mt-1 block w-full rounded-md border-2 border-slate-400 bg-white text-slate-900 placeholder-slate-400 focus:border-sky-600 focus:ring-2 focus:ring-sky-500 focus:outline-none" />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-slate-700">Email</label>
          <input id="email" name="email" type="email" required class="mt-1 block w-full rounded-md border-2 border-slate-400 bg-white text-slate-900 placeholder-slate-400 focus:border-sky-600 focus:ring-2 focus:ring-sky-500 focus:outline-none" />
        </div>
      </div>
      <div>
        <label for="subject" class="block text-sm font-medium text-slate-700">Asunto</label>
  <input id="subject" name="subject" type="text" required class="mt-1 block w-full rounded-md border-2 border-slate-400 bg-white text-slate-900 placeholder-slate-400 focus:border-sky-600 focus:ring-2 focus:ring-sky-500 focus:outline-none" />
      </div>
      <div>
        <label for="message" class="block text-sm font-medium text-slate-700">Mensaje</label>
  <textarea id="message" name="message" rows="6" required class="mt-1 block w-full rounded-md border-2 border-slate-400 bg-white text-slate-900 placeholder-slate-400 focus:border-sky-600 focus:ring-2 focus:ring-sky-500 focus:outline-none"></textarea>
      </div>

      <!-- Consentimiento de privacidad -->
      <div class="mt-2 flex items-start gap-3">
        <input id="consent" name="consent" type="checkbox" required class="mt-1 h-4 w-4 rounded border-slate-400 text-sky-600 focus:ring-sky-500" />
        <label for="consent" class="text-sm text-slate-600 leading-snug">
          Acepto el uso de mis datos para responder este mensaje. Consulta la <a href="/privacidad" class="underline hover:text-sky-600">política de privacidad</a>.
        </label>
      </div>

      <div class="flex items-center gap-3">
        <button type="submit" class="inline-flex items-center justify-center rounded-md bg-sky-600 px-5 py-2.5 text-white hover:bg-sky-700 disabled:opacity-50 disabled:cursor-not-allowed">
          Enviar mensaje
        </button>
        <p id="form-status" class="text-sm"></p>
      </div>
    </form>
  </div>

  <script>
    const form = document.getElementById('contact-form') as HTMLFormElement | null;
    const statusEl = document.getElementById('form-status') as HTMLParagraphElement | null;
    const STORAGE_KEY = 'contactFormDraft';

    function loadDraft() {
      try {
        const raw = sessionStorage.getItem(STORAGE_KEY);
        if (!raw || !form) return;
        const draft = JSON.parse(raw);
        ['name','email','subject','message'].forEach(id => {
          const el = form.querySelector('#' + id) as HTMLInputElement | HTMLTextAreaElement | null;
          if (el && typeof draft[id] === 'string') el.value = draft[id];
        });
        const consent = form.querySelector('#consent') as HTMLInputElement | null;
        if (consent && typeof draft['consent'] === 'boolean') consent.checked = draft['consent'];
      } catch {}
    }

    function saveDraft() {
      if (!form) return;
      try {
        const payload: Record<string, any> = {};
        ['name','email','subject','message'].forEach(id => {
          const el = form.querySelector('#' + id) as HTMLInputElement | HTMLTextAreaElement | null;
          if (el) payload[id] = el.value;
        });
        const consent = form.querySelector('#consent') as HTMLInputElement | null;
        if (consent) payload['consent'] = consent.checked;
        sessionStorage.setItem(STORAGE_KEY, JSON.stringify(payload));
      } catch {}
    }

    // Guardar borrador en cada cambio (throttle simple via timeout)
    let draftTimer: number | undefined;
    function queueSave() {
      if (draftTimer) clearTimeout(draftTimer);
      draftTimer = setTimeout(saveDraft, 250) as unknown as number;
    }

    if (form) {
      form.addEventListener('input', queueSave, true);
      loadDraft();
    }

    // Guardar justo antes de abandonar hacia la política de privacidad (capturar click en enlace interno)
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target && target.closest('a[href="/privacidad"]')) {
        saveDraft();
      }
    });
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (!statusEl) return;
        statusEl.textContent = '';
        const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement | null;
        if (btn) btn.disabled = true;
        try {
          // Validar consentimiento (por si el navegador no aplica required en algún contexto SSR/hydration)
          const consent = form.querySelector('#consent') as HTMLInputElement | null;
          if (consent && !consent.checked) {
            statusEl.className = 'text-sm text-rose-700';
            statusEl.textContent = 'Debes aceptar la política de privacidad.';
            if (btn) btn.disabled = false;
            return;
          }
          const formData = new FormData(form);
          const payload = Object.fromEntries(formData.entries());
          const res = await fetch('/api/contact', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload),
          });
          const data = await res.json();
          if (res.ok) {
            statusEl.className = 'text-sm text-emerald-700';
            statusEl.textContent = '¡Gracias! Tu mensaje fue enviado.';
            form.reset();
            try { sessionStorage.removeItem(STORAGE_KEY); } catch {}
          } else {
            statusEl.className = 'text-sm text-rose-700';
            statusEl.textContent = data?.error || 'No se pudo enviar. Intenta nuevamente.';
          }
        } catch (err) {
          statusEl.className = 'text-sm text-rose-700';
          statusEl.textContent = 'Error de red. Inténtalo más tarde.';
        } finally {
          if (btn) btn.disabled = false;
        }
      });
    }
  </script>
</section>
