---
import { getCollection } from 'astro:content';
const { items = [] } = Astro.props as { items: Array<any> };
---
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  {items.map((it) => (
    <div class="group block overflow-hidden rounded-lg border border-slate-200 hover:shadow-md transition">
      {it.data.cover || it.data.image ? (
        <img src={it.data.cover ?? it.data.image} alt={it.data.title} loading="lazy" class="aspect-[4/3] w-full object-cover group-hover:scale-[1.02] transition" />
      ) : (
        <div class="aspect-[4/3] w-full bg-slate-100 flex items-center justify-center text-slate-400">Sin imagen</div>
      )}
      <div class="p-4">
        <h3 class="font-semibold">{it.data.title}</h3>
        <p class="text-xs text-slate-500 mt-1">{it.data.technique} · {it.data.year}</p>
        {(it.data.description || it.data.school) && (
          <div class="mt-2 text-sm text-slate-600">
            {it.data.description && <p class="leading-snug">{it.data.description}</p>}
            <p class="leading-snug text-slate-500">
              {it.data.year}{it.data.school ? ` · ${it.data.school}` : ''}
            </p>
          </div>
        )}
      </div>
    </div>
  ))}
</div>
